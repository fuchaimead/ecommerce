<div class="ui divider"></div>
<div class="ui grid">
    <% @items.each do |item| %>
      <div class="sixteen wide mobile eight wide tablet four wide computer column">
       <div class="ui card">
        <div class="image">
            <img src="https://robohash.org/<%= item.photo %>?set=4" />
          </div>
          <div class="content">
            <h1 class="header center aligned">
              <%= link_to item.name, item_path(item) %>
            </h1>
          </div>
            <p class="center aligned">$<%= item.price %></p>
          <div class='ui bottom attached button'>
             <i class="add icon"></i>
            <%= link_to 'View Item', item_path(item) %>
          </div>
         </div>
      </div>
    <% end %>
</div>


